Config { font = "xft:Bitstream Vera Sans Mono:pixelsize=16:antialias=true:hinting=true"
       , additionalFonts = []
       , borderColor = "black"
       , border = BottomB
       , bgColor = "black"
       , fgColor = "#f0f0f0"
       , alpha = 255 
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Cpu ["-L","3","-H","50", "--normal","#3CB371","--high","#666666"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Date "%H:%M - %a %b %_d %Y " "date" 10
                    , Run StdinReader
                    , Run Com "/home/notation/.config/scripts/current-song" [] "song" 1
                    , Run Com "timer" ["status"] "timer" 1
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }\
                    \{%song% | %timer% | %memory% | %date%                                 "
       }
