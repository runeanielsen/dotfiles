# general settings
auto-reload yes
max-items 25

# externel browser
browser "firefox %u"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K
unbind-key ,

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# bind macro key
bind-key m macro-prefix

# open link mpv
macro m set browser "mpv %u" ; open-in-browser ; set browser "elinks %u"
